{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "lib":  ["es5", "dom", "es6", "es2015.iterable", "es7"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "declaration":true
  },
  "files": [
    "./src/opentok.module.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "../aot",
    "skipMetadataEmit": false
  }
}